package uav.inet.mobility.single;

import uav.inet.mobility.base.MovingMobilityBase;

//
// Moves the node around a circle.
//
// @author Andras Varga
//
simple ThreeWayRandomMobility extends MovingMobilityBase
{
    parameters:
        double initialAlpha @unit(deg)=default(uniform(0deg,360deg));
        double initialBeta @unit(deg)=default(uniform(0deg,360deg));
        double initialGamma @unit(deg)=default(0deg);
        int margin @unit(m)=default(100m);
        double r @unit(m); // radius of the circle
        double radius @unit(m);
        double speed @unit(mps) = default(0mps); // speed of the host
        double startAngle @unit(deg) = default(uniform(0deg, 360deg)); // starting angle
        double duration @unit(s)=default(0s);
        @class(ThreeWayRandomMobility);
}